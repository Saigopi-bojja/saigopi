<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Custom Popup</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        #popup {
            display: none;
            position: fixed;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .popup-content {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            text-align: center;
        }

        button {
            margin: 5px;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        #proceedButton {
            background-color: #4CAF50;
            color: white;
        }

        #cancelButton {
            background-color: #f44336;
            color: white;
        }
    </style>
</head>
<body>
    <button id="openPopup">Open Popup</button>

    <div id="popup" class="popup">
        <div class="popup-content">
            <p>Do you want to proceed?</p>
            <button id="proceedButton">Proceed</button>
            <button id="cancelButton">Cancel</button>
        </div>
    </div>

    <script>
        // Function to open the popup
        document.getElementById('openPopup').addEventListener('click', function() {
            document.getElementById('popup').style.display = 'flex';
        });

        // Functionality for the "Proceed" button
        document.getElementById('proceedButton').addEventListener('click', function() {
            // Call the proceed functionality
            proceedFunctionality();
            // Close the popup
            document.getElementById('popup').style.display = 'none';
        });

        // Functionality for the "Cancel" button
        document.getElementById('cancelButton').addEventListener('click', function() {
            // Call the cancel functionality
            cancelFunctionality();
            // Close the popup
            document.getElementById('popup').style.display = 'none';
        });

        // Define the proceed functionality
        function proceedFunctionality() {
            // Perform the desired action
            console.log('Proceeding with the action...');
            // Example: Redirect to another page
            window.location.href = 'https://www.example.com/proceed';
        }

        // Define the cancel functionality
        function cancelFunctionality() {
            // Perform the desired action
            console.log('Action has been cancelled.');
            // Example: Reset a form or show a message
            alert('You have cancelled the action.');
        }
    </script>
</body>
</html>
